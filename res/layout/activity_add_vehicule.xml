<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddVehiculeActivity" >

    <EditText
        android:id="@+id/txtVehiculeName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textShortMessage|textCapWords"
        android:hint="@string/vehicule_name_hint" />
    
    <Button
        android:onClick="onSubmitNewVehiculeClicked"
        android:text="@string/vehicule_add_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>